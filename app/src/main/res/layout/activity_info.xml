                <android.support.v7.widget.CardView style="@style/cardView">

                    <LinearLayout style="@style/linerlayout_view">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/colorPrimary"
                            android:text="@string/mlw08"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@android:color/white"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/mlw08"
                            style="@style/EditText_number"
                            android:hint="@string/mlw08"
                            android:maxLength="1" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <!--mlw09-->
            <LinearLayout style="@style/linerlayout_view">

                <android.support.v7.widget.CardView style="@style/cardView">

                    <LinearLayout style="@style/linerlayout_view">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/colorPrimary"
                            android:text="@string/mlw09"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@android:color/white"
                            android:textSize="20sp" />

                        <LinearLayout
                            style="@style/linerlayout_view"
                            android:orientation="horizontal">

                            <io.blackbox_vision.datetimepickeredittext.view.TimePickerEditText
                                android:id="@+id/mlw09b"
                                style="@style/EditText_number_b_box"
                                android:layout_width="0dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="40"
                                android:focusable="false"
                                android:hint="@string/mlw09b"
                                android:textColor="@android:color/black"
                                app:is24HourView="true"
                                app:timeFormat="HH:mm" />

                            <io.blackbox_vision.datetimepickeredittext.view.DatePickerInputEditText
                                android:id="@+id/mlw09a"
                                style="@style/EditText_number_b_box"
                                android:layout_width="0dp"
                                android:layout_weight="40"
                                android:focusable="false"
                                android:hint="@string/mlw09a"
                                android:textColor="@android:color/black"
                                app:dateFormat="dd-MM-yyyy" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <!--mlw11-->
            <LinearLayout
                android:id="@+id/mlwCrf3A"
