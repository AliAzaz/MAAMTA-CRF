                            android:layout_gravity="center_horizontal"
                            android:background="@color/colorPrimary"
                            android:text="@string/mlw05"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@android:color/white"
                            android:textSize="20sp" />

                        <RadioGroup
                            android:id="@+id/mlw05"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/mlw05a"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/mlw05a" />

                            <RadioButton
                                android:id="@+id/mlw05b"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/mlw05b" />

                            <RadioButton
                                android:id="@+id/mlw05c"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/mlw05c" />

                            <RadioButton
                                android:id="@+id/mlw05d"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/mlw05d" />
                        </RadioGroup>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <!--Barcode START-->
            <LinearLayout style="@style/linerlayout_view">

                <android.support.v7.widget.CardView style="@style/cardView">

                    <LinearLayout style="@style/linerlayout_view">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/colorPrimary"
                            android:text="SPECIMEN ID"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@android:color/white"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/mlwScan"
                            style="@style/EditText_ch_num"
                            android:hint="SPECIMEN BARCODE" />

                        <Button
                            style="@style/buttonBG"
                            android:onClick="@{() -> callback.BtnScanSpec()}"
                            android:text="Scan Barcode"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
            <!--Barcode END-->

            <!--mlw06-->
            <LinearLayout style="@style/linerlayout_view">

                <android.support.v7.widget.CardView style="@style/cardView">

                    <LinearLayout style="@style/linerlayout_view">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/colorPrimary"
                            android:text="@string/mlw06"
